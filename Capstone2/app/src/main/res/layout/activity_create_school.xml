<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6F5F7"
    tools:context=".create_school">


        <EditText
            android:id="@+id/editText2"
            android:layout_width="416dp"
            android:layout_height="73dp"
            android:background="#E6F8D1"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:inputType="textPersonName"
            android:text="  IMMUNIZATIONTARIO"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="411dp"
            android:layout_height="51dp"
            android:layout_marginBottom="40dp"
            android:background="#00BCD4"
            android:text="Cancel"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="137dp"
            android:layout_height="41dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:background="#91C6F1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Full Name"
            android:textColor="#010725"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText11" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="137dp"
            android:layout_height="41dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:background="#91C6F1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Employee ID:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#010725"
            android:textSize="19sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText7" />

        <EditText
            android:id="@+id/editText8"
            android:layout_width="137dp"
            android:layout_height="41dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:background="#91C6F1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Email: "
            android:textColor="#010725"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText6" />

        <EditText
            android:id="@+id/txt_createmail"
            android:layout_width="212dp"
            android:layout_height="41dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="abc@email.com"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_employeeID" />

        <EditText
            android:id="@+id/txt_phone"
            android:layout_width="212dp"
            android:layout_height="41dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="123-123-1234"
            android:inputType="phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_schoolAdd" />

        <TextView
            android:id="@+id/txt_employeeID"
            android:layout_width="212dp"
            android:layout_height="41dp"
            android:layout_marginTop="20dp"
            android:hint="111-111-111"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_phone" />


        <Button
            android:id="@+id/btn_createacc"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="407dp"
            android:layout_height="0dp"
            android:layout_marginBottom="14dp"
            android:background="#E46791"
            android:text="Create Account"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btn_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txt_createpass"
            android:layout_width="212dp"
            android:layout_height="41dp"
            android:layout_marginTop="20dp"
            android:text="*****"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_createmail" />

        <EditText
            android:id="@+id/editText18"
            android:layout_width="137dp"
            android:layout_height="41dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:background="#91C6F1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="New Password:"
            android:textColor="#010725"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText8" />

        <EditText
            android:id="@+id/editText7"
            android:layout_width="137dp"
            android:layout_height="41dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:background="#91C6F1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="School Phone: "
            android:textColor="#010725"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText12" />

        <TextView
            android:id="@+id/txt_fullname"
            android:layout_width="212dp"
            android:layout_height="41dp"
            android:layout_marginTop="20dp"
            android:hint="First - Last Name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText11" />

        <EditText
            android:id="@+id/editText11"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="#03178B"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="            SCHOOL ADMIN"
            android:textColor="#FCF8F8"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText2" />

        <EditText
            android:id="@+id/editText10"
            android:layout_width="137dp"
            android:layout_height="41dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:background="#91C6F1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="School Name: "
            android:textColor="#010725"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText3" />

        <TextView
            android:id="@+id/txt_schoolname"
            android:layout_width="212dp"
            android:layout_height="41dp"
            android:layout_marginTop="20dp"
            android:hint="Name of The School"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_fullname" />

        <TextView
            android:id="@+id/txt_schoolAdd"
            android:layout_width="212dp"
            android:layout_height="41dp"
            android:layout_marginTop="20dp"
            android:hint="Address of The School"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_schoolname" />

        <EditText
            android:id="@+id/editText12"
            android:layout_width="137dp"
            android:layout_height="41dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:background="#91C6F1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="School Address"
            android:textColor="#010725"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText10" />


</androidx.constraintlayout.widget.ConstraintLayout>